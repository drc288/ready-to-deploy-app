<style>
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  white-space: pre;
  color: #e5e7eb;
  background: #18181b;
  padding: 0.75rem 1.5rem;
  width: 100%;
  max-width: 1100px;
  margin: 0 auto;
  box-sizing: border-box;
  height: auto;
  overflow: hidden;
  position: relative;
}

.rocket-container {
  width: 180px;
  height: 180px;
  background: #0f0f13;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.4), inset 0 0 15px rgba(16, 185, 129, 0.15);
  border: 2px solid #1d1d25;
  margin-left: 2rem;
  flex: 0 0 auto;
  position: relative;
}

.rocket {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: float-rotated 2.7s ease-in-out infinite;
  flex: 0 0 auto;
  transform: scale(0.55); /* Escala aún más reducida */
  position: relative;
  z-index: 2;
  margin-top: -2px; /* Ajustar posición vertical para centrar mejor */
}

.flames {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: -6px;
  gap: 2px;
}

.flame {
  color: #ef4444;
  font-weight: bold;
  font-size: 1.25rem;
  text-align: center;
  animation: flicker 0.45s alternate infinite;
  opacity: 1;
}

.flame:nth-child(2) {
  animation-delay: 0.22s;
}

@keyframes float-rotated {
  0%, 100% { transform: rotate(45deg) translateY(0); }
  50%      { transform: rotate(45deg) translateY(-4px);}
}

@keyframes flicker {
  0% { opacity: 1; }
  60% { opacity: 0.55; }
  100% { opacity: 1; }
}

.circle-glow {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle at center, rgba(16, 185, 129, 0.12) 0%, transparent 70%);
  animation: pulse-glow 4s ease-in-out infinite;
  z-index: 1;
}

.circle-rim {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid rgba(16, 185, 129, 0.2);
  box-shadow: inset 0 0 25px rgba(16, 185, 129, 0.1);
  z-index: 1;
}

@keyframes pulse-glow {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 0.9; transform: scale(1.05); }
}

.title {
  color: #10b981;
  animation: fadeIn 1.3s cubic-bezier(0.22, 1, 0.36, 1);
  flex: 1 1 auto;
  text-align: center;
  transform: scale(1); /* Escala completa para que sea más grande */
  margin-right: 2rem; /* Mantener margen derecho */
  font-size: 1.1rem; /* Aumentar tamaño de fuente */
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(18px);}
  to   { opacity: 1; transform: translateY(0);}
}

.v-flame {
  display: inline-block;
  color: #ff5252;
  font-weight: bold;
  animation: v-bounce 0.3s ease-in-out infinite alternate;
  font-size: 0.8rem; /* Tamaño aún más reducido */
  text-shadow: 0 0 3px rgba(255, 82, 82, 0.7);
}

@keyframes v-bounce {
  0%   { transform: translateY(0); opacity: 0.8; }
  100% { transform: translateY(3px); opacity: 1; }
}
</style>

