---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import MenuSeleccionIntegracion from '@/components/MenuSeleccionIntegracion.astro';
import Footer from '@/components/Footer.astro';
---

<Layout title="Ready To Deploy App">
  <div class="layout-root">
    <Header />
    <MenuSeleccionIntegracion />
    <Footer />
  </div>
</Layout>

<style>
  .layout-root {
    min-height: 100vh;
    max-width: 1100px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0;
    box-sizing: border-box;
  }
</style>